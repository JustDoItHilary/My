<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="小时" />

    <EditText
        android:id="@+id/edit_minute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="分钟" />

    <Button
        android:id="@+id/btn_setClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set_Clock_Service" />
    <Button
        android:id="@+id/btn_setExactClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setExact_Clock_Receiver" />
    <Button
        android:id="@+id/btn_closeService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close_Service" />

</LinearLayout>